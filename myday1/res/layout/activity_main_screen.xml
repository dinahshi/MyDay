<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainScreen"
    android:background="@raw/mainscreen" >

    <LinearLayout
        android:id="@+id/llPostFeed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:orientation="vertical" >

    <TextView
            android:id="@+id/tvPostTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day One:"
            android:textColor="@color/black"
            android:textSize="22sp" />

    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="340dp"
            android:layout_height="340dp"
            android:layout_marginTop="5dp"
            android:layout_weight="4.63"
            android:scaleType="centerInside"
            android:src="@raw/sample" />
    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/caption"
        android:textColor="@color/black"
        android:textSize="12sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/bNewDay"
        android:layout_width="560dip"
        android:layout_height="45dip"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignParentBottom="true"
        android:background="@raw/newdaybut" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:translationY="-10dp"
        android:src="@raw/mydaylogo" />

</RelativeLayout>